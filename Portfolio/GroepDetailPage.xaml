<Page x:Class="Portfolio.GroepDetailPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:callisto="using:Callisto.Controls"
      xmlns:common="using:Portfolio.Common"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:Portfolio"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      x:Name="pageRoot"
      DataContext="{Binding GroepDetail,
                            Source={StaticResource Locator}}"
      mc:Ignorable="d">

    <Page.Resources>
        <DataTemplate x:Key="LeidersDataTemplate">
            <Border BorderBrush="LightGray" BorderThickness="2">
                <StackPanel Width="400" Orientation="Horizontal">
                    <TextBlock Width="330"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               FontSize="20"
                               Padding="5"
                               Text="{Binding Naam}"
                               TextAlignment="Left" />
                    <Image Width="50"
                           Height="50"
                           VerticalAlignment="Center"
                           Stretch="UniformToFill">
                        <Image.Source>
                            <BitmapImage UriSource="{Binding FotoUri}" />
                        </Image.Source>
                    </Image>
                </StackPanel>
            </Border>
        </DataTemplate>

        <Style x:Key="FlyoutTextBlockStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20" />
            <Setter Property="HorizontalAlignment" Value="Right" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Margin" Value="5" />
        </Style>
        <Style x:Key="FlyoutTextBoxStyle" TargetType="TextBox">
            <Setter Property="Margin" Value="5" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="Grid.Column" Value="1" />
        </Style>
    </Page.Resources>

